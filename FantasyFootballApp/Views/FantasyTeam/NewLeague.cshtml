@model FantasyLeague
@Html.BeginForm("AddLeague", "FantasyTeam", "Post")
{
    @Html.TextBoxFor(m => m.LeagueName, new { @Value = @Model.LeagueName, style = "display: none; " })
    @*@Html.TextBoxFor(m => m.LeagueId, new { @Value = @Model.LeagueId, style = "display: none; " })*@
    @for (int i = 0; i < Model.Teams.Count(); i++)
    {
        @*@Html.TextBoxFor(m => m.Teams[i].LeagueId, new { @Value = @Model.LeagueId, style = "display: none; " })*@

        @Html.LabelFor(m => m.Teams[i].TeamName)
        @Html.TextBoxFor(m => m.Teams[i].TeamName)
    }
    <input type="submit" value="Create league" />
}
